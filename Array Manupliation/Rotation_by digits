#include<iostream>
#include<stdlib.h>
using namespace std;
void rotate(int *a, int n)
{
    int d;
    d=(a[0]+a[n-1])/2;
    int *b;
    b=(int *)malloc(n*sizeof(int));
    for(int i=0;i<n;i++)
    {
        b[i]=a[(i+d)%n];
    }
    for(int i=0;i<n;i++)
    {
        a[i]=b[i];
    }
    for(int i=0;i<n;i++){
        cout<<a[i];
    }
}
int main(){
    int a[20];
  int n;
  std::cout<<"Enter the values in array:";
  std::cin>>n;
  std::cout<<"Enter array elements:"<<std::endl;
  
  for(int i=0;i<n;i++)
  {
      std::cin>>a[i];
  }
  rotate(a,n);
  return 0;
}
